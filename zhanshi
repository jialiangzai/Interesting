<body>
    <button>我是一个按钮</button>
    <input type="text" value="请点击左边神奇的按钮">
    <script>
        var but=document.querySelector('button')
       var inp= document.querySelector('input')
        but.onclick=function(){
            but.disabled=true;
            //inp.innerHTML这里不能用是因为这是一个表单
            inp.value='且行且珍惜'
        }
    </script>
